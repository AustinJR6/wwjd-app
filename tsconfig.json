{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["App/*"]
    },
    "noImplicitAny": true,
    "esModuleInterop": true,
    "module": "Node16",
    "moduleResolution": "node16",
    "target": "ES2020",
    "jsx": "react-native",
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "allowImportingTsExtensions": true,

    "skipLibCheck": true
  }
}
