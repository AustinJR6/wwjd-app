rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // ğŸ§‘â€ğŸ’¼ User profile data - only owners can read/write
    match /users/{userId} {
      allow create: if request.auth != null && request.auth.uid == userId;
      allow read, update, delete: if request.auth != null && request.auth.uid == userId;
    }

    // ğŸ› Religion chat messages (per user)
    match /religionChats/{userId}/messages {
      allow list, read: if request.auth != null && request.auth.uid == userId;
      match /{messageId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }

    // â›ªï¸ Temp religion chat (for unsubscribed users)
    match /tempReligionChat/{userId}/messages {
      allow list, read: if request.auth != null && request.auth.uid == userId;
      match /{messageId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }

    // ğŸ™ Confessional session messages
    match /confessionalSessions/{userId}/messages {
      allow list, read: if request.auth != null && request.auth.uid == userId;
      match /{messageId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }

    // ğŸ’³ Subscriptions
    match /subscriptions/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // ğŸª™ Token documents
    match /tokens/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // ğŸ“Š Global token settings (readable by all authenticated users)
    match /tokens/settings {
      allow read: if request.auth != null;
    }

    // ğŸ Free ask usage
    match /freeAsk/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // ğŸ““ Journal entries stored under user subcollection
    match /users/{userId}/journalEntries {
      allow list, read: if request.auth != null && request.auth.uid == userId;
      match /{entryId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }

    // ğŸ§¾ Legacy journal entries path (not currently used but preserved)
    match /journalEntries/{userId}/{entryId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // ğŸ•°ï¸ Challenge history
    match /users/{userId}/challengeHistory/{entryId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // ğŸ§  Active challenge (per user)
    match /users/{userId}/activeChallenge {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // ğŸ“† Daily challenges - readable by everyone
    match /dailyChallenges/{dayId} {
      allow read: if true;
    }

    // ğŸŸ¢ Active challenges (public list)
    match /activeChallenges/{docId} {
      allow read: if request.auth != null;
    }

    // âœ… Completed challenges (per user)
    match /completedChallenges/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // ğŸ¢ Organization documents
    match /organizations/{orgId} {
      allow list, read, write: if request.auth != null;
    }

    // ğŸ“š Public religion info - open access
    match /religion/{religionId} {
      allow read: if true;
    }

    // ğŸ“¸ Challenge proof submissions
    match /challengeProofs/{proofId} {
      allow write: if request.auth != null && request.resource.data.uid == request.auth.uid;
      allow read: if request.auth != null;
    }

    // ğŸš« Catch-all fallback - deny all others
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
