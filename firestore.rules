rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // 🧑‍💼 User profile data - only owners can read/write
    match /users/{userId} {
      allow create: if request.auth != null && request.auth.uid == userId;
      allow read, update, delete: if request.auth != null && request.auth.uid == userId;
    }

    // 🛐 Religion chat messages (per user)
    match /religionChats/{userId}/messages {
      allow list, read: if request.auth != null && request.auth.uid == userId;
      match /{messageId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }

    // ⛪️ Temp religion chat (for unsubscribed users)
    match /tempReligionChat/{userId}/messages {
      allow list, read: if request.auth != null && request.auth.uid == userId;
      match /{messageId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }

    // 🙏 Confessional session messages
    match /confessionalSessions/{userId}/messages {
      allow list, read: if request.auth != null && request.auth.uid == userId;
      match /{messageId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }

    // 💳 Subscriptions
    match /subscriptions/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // 🪙 Token documents
    match /tokens/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // 📊 Global token settings (readable by all authenticated users)
    match /tokens/settings {
      allow read: if request.auth != null;
    }

    // 🎁 Free ask usage
    match /freeAsk/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // 📓 Journal entries stored under user subcollection
    match /users/{userId}/journalEntries {
      allow list, read: if request.auth != null && request.auth.uid == userId;
      match /{entryId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }

    // 🧾 Legacy journal entries path (not currently used but preserved)
    match /journalEntries/{userId}/{entryId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // 🕰️ Challenge history
    match /users/{userId}/challengeHistory/{entryId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // 🧠 Active challenge (per user)
    match /users/{userId}/activeChallenge {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // 📆 Daily challenges - readable by everyone
    match /dailyChallenges/{dayId} {
      allow read: if true;
    }

    // 🟢 Active challenges (public list)
    match /activeChallenges/{docId} {
      allow read: if request.auth != null;
    }

    // ✅ Completed challenges (per user)
    match /completedChallenges/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // 🏢 Organization documents
    match /organizations/{orgId} {
      allow list, read, write: if request.auth != null;
    }

    // 📚 Public religion info - open access
    match /religion/{religionId} {
      allow read: if true;
    }

    // 📸 Challenge proof submissions
    match /challengeProofs/{proofId} {
      allow write: if request.auth != null && request.resource.data.uid == request.auth.uid;
      allow read: if request.auth != null;
    }

    // 🚫 Catch-all fallback - deny all others
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
