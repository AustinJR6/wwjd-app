rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // User profile data
    match /users/{userId} {
      // Allow any authenticated user to read for leaderboard
      allow read: if request.auth != null;
      // Only owner can modify
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Religion chat messages
    match /religionChats/{userId}/messages {
      allow list, read: if request.auth != null && request.auth.uid == userId;
      match /{messageId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }

    // Temporary chat collection used before subscribing
    match /tempReligionChat/{userId}/messages {
      allow list, read: if request.auth != null && request.auth.uid == userId;
      match /{messageId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }

    // Confessional session messages
    match /confessionalSessions/{userId}/messages {
      allow list, read: if request.auth != null && request.auth.uid == userId;
      match /{messageId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }

    // Subscription documents
    match /subscriptions/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Top level tokens
    match /tokens/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Global token settings readable by any authenticated user
    match /tokens/settings {
      allow read: if request.auth != null;
    }

    // Free ask usage tracker
    match /freeAsk/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Journal entries stored per user
    match /users/{userId}/journalEntries/{entryId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Challenge history documents
    match /users/{userId}/challengeHistory/{entryId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Active challenge state per user
    match /users/{userId}/activeChallenge {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Daily challenges collection
    match /dailyChallenges/{dayId} {
      allow read: if request.auth != null;
    }

    // Active challenges collection
    match /activeChallenges/{docId} {
      allow read: if request.auth != null;
    }

    // Public leaderboards
    match /organizations/{orgId} {
      allow read, write: if request.auth != null;
    }

    // Read-only religion stats
    match /religions/{religionId} {
      allow read: if request.auth != null;
    }

    // Completed challenges per user
    match /completedChallenges/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Challenge proof submissions
    match /challengeProofs/{proofId} {
      allow write: if request.auth != null && request.resource.data.uid == request.auth.uid;
      allow read: if request.auth != null;
    }

    // Default deny all other accesses
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
