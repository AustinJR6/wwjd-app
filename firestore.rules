rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // ðŸŒž Daily challenges (read-only to all, write only for authenticated users)
    match /dailyChallenges/{docId} {
      allow read, write: if request.auth != null;
    }

    // ðŸ““ Journal entries (open to authenticated users for now)
    match /journalEntries/{docId} {
      allow read, write: if request.auth != null;
    }

    // ðŸ”¥ Completed challenges (used for streak tracking)
    match /completedChallenges/{docId} {
      allow read, write: if request.auth != null;
    }

    // ðŸ§ª Test messages & onboarding
    match /testCollection/{uid} {
      allow read, write: if request.auth != null && request.auth.uid == uid;
    }

    // ðŸ’³ Token & subscription data
    match /users/{uid} {
      allow read, write: if request.auth != null && request.auth.uid == uid;
    }

    // ðŸš« Default: deny everything else
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
