rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // User profile data
    match /users/{userId} {
      // Allow any authenticated user to read for leaderboard
      allow read: if request.auth != null;
      // Only owner can modify
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Religion chat messages
    match /religionChats/{userId}/messages/{messageId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Temporary chat collection used before subscribing
    match /tempReligionChat/{userId}/messages/{messageId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Confessional session messages
    match /confessionalSessions/{userId}/messages/{messageId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Subscription documents
    match /subscriptions/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Top level tokens
    match /tokens/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Journal entries stored per user
    match /journalEntries/{userId}/{entryId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Challenge history documents
    match /challengeHistory/{userId}/{entryId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Active challenge state per user
    match /users/{userId}/activeChallenge {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Public leaderboards
    match /organizations/{orgId} {
      allow read, write: if request.auth != null;
    }

    match /religions/{religionId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }

    // Default deny all other accesses
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
