    "dotenv": "^16.5.0",
    "firebase-admin": "^11.10.1",
    "firebase-functions": "^4.9.0",
    "stripe": "^16.12.0"
  },
  "devDependencies": {
    "@types/node": "^24.0.4",
    "concurrently": "^8",
    "jest": "^30.0.4",
    "rimraf": "^6.0.1",
    "tsc-alias": "^1.8.8",
    "typescript": "^5.8.3"
  },
