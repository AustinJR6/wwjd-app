{
  "compilerOptions": {
    "target": "ES2020",
    "module": "es2015",
    "moduleResolution": "node",
    "lib": ["ES2020"],
    "outDir": "lib",
    "rootDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true
  },
  "include": ["**/*.ts"],
  "exclude": ["lib", "dist", "node_modules"]
}
