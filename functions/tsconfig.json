{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2020",
    "baseUrl": "src",
    "paths": {
      "@core/*": ["core/*"],
      "@utils/*": ["utils/*"],
      "@stripe/*": ["stripe/*"]
    },
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "outDir": "lib",
    "sourceMap": true,
    "strict": true
  },
  "include": ["src"]
}

