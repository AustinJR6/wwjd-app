{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./lib",
    "baseUrl": "./src",
    "paths": {
      "@core/*": ["core/*"],
      "@data/*": ["data/*"],
      "@features/*": ["features/*"],
      "@utils": ["utils"],
      "@utils/*": ["utils/*"],
      "stripe": ["../node_modules/stripe"],
      "stripe/*": ["../node_modules/stripe/*"]
    },
    "target": "ES2020",
    "module": "commonjs",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": true
  },
  "include": ["src"]
}

