{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,

    "rootDir": "./src",
    "outDir": "./lib",

    "baseUrl": "./src",
    "paths": {
      "@core/*": ["core/*"],
      "@data/*": ["data/*"],
      "@features/*": ["features/*"],
      "@utils": ["utils"],
      "@utils/*": ["utils/*"]
    }
  },
  "include": ["src"]
}
