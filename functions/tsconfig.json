{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "outDir": "lib",
    "rootDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "moduleResolution": "Node",
    "types": ["node"],
    "baseUrl": "src",
    "paths": {
      "@core/*": ["core/*"],
      "@data/*": ["data/*"],
      "@features/*": ["features/*"],
      "@utils": ["utils"]
    }
  },
  "include": ["**/*.ts"],
  "exclude": ["lib", "dist", "node_modules"]
}
